@model BankCharge.Models.Bank
@{
    ViewData["Title"] = "EditBank";
}

<section class="content-header">
    <section>
        <h2>Edit Bank</h2>
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditBank" asp-controller="Bank" method="post">
                    <input type="hidden" name="BankId" value="@Model.BankId" />
                    <div class="form-group">


                        <label class="control-label">Bank Name</label>
                        <input name="Name" value="@Model.Name" class="form-control" required />
                    </div>
                    <div>
                        <img class="img-responsive" src="@Model.Image" alt="sala image aayena" height="50" width="50" style="border-radius:50%" />
                        <input type="file" name="ImageUrl" id="img" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Charge</label>
                        <input type="number" name="Charge" value="@Model.Charge" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Card Type</label><br />
                        <select class="js-example-basic-multiple" name="CardType" multiple="multiple" style="width :360px">
                           
                            <option value="MasterCard">MasterCard</option>
                            <option value="STC">STC </option>
                            <option value="Visa">Visa </option>
                        </select>
                    </div>



                    <div class="form-group">
                        <input type="submit" value="EditBank" class="btn btn-success btn-sm" />
                    </div>
                </form>
            </div>
        </div>

    </section>
</section>
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/css/select2.min.css" rel="stylesheet" />


<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.7/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        $('.js-example-basic-multiple').select2();
    });
</script>


