@model IEnumerable<BankCharge.Models.PatnerViewModel>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<section>
    <h4 align="right">
        <a href="/Patner/New"><i class="fa fa-plus-square" aria-hidden="true">Add  PatnerBank</i> </a>
    </h4>
    <div>


        <br />
        <table class="table table-responsive table-striped table-bordered table-hover table-condensed " id="mytable">
            <thead>
                <tr style="background-color:cadetblue">
                    <th style="width:200px; ">Bank Name</th>
                    <th>Patner Bank</th>

                    <th>Action</th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => item.Bank.Name)</td>
                        <td>
                            @if (item.PatnerBank != null)
                            {
                                @foreach (var patnerbank in item.PatnerBank)
                                {
                                    <p> @patnerbank.Name </p>
                                }
                            }
                            else
                            {
                                <p>No Patner Bank </p>
                            }
                        </td>

                        <td>
                            <a href="/Bank/EditBank?id=@item.Bank"><i class="fa fa-pencil-square-o" aria-hidden="true" style="color:green;margin:5px; "></i>edit</a>|
                            <a href="/Bank/DeleteBank?id=@item.Bank"><i class="fa fa-trash-o" aria-hidden="true" style="color:red; margin:5px;"></i>delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</section>
